<div id="main">
    <div class="container">

        {{#each project}}
            <div class="row">

                <div class="col-md-5">
                    <img src="/img/vorlage_projects.jpg" class="card-img-top rounded-0 custom_project-card" alt="{{project.projectImgURL}}">
                </div>

                <div class="col-md-7">
                    <p class="card-text text-black-50">Category</p>
                    <h5 class="card-title text-uppercase">{{projectTitle}}</h5>
                    <p class="my-2">{{projectDesc}}</p>
                    <p>{{projectDate}}</p>

                    {{#if ../isAdmin}}
                        <div class="d-flex">
                            <a href="#" class="btn btn-outline-success btn-sm me-2" role="button" aria-pressed="true">Update</a>
                            <a href="/{{projectid}}/delete" class="btn btn-outline-danger btn-sm me-2" role="button" aria-pressed="true">Delete</a>
                        </div>
                    {{/if}}
                </div>
                
            </div>
            

        {{/each}}

    </div>
</div>